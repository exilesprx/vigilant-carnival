{
  "name": "Haskell",
  "dockerFile": "Dockerfile",
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {
        "haskell.manageHLS": "GHCup",
        "haskell.toolchain": {
          "ghc": "9.2",
          "hls": "recommended",
          "cabal": "recommended",
          "stack": "recommended"
        }
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "haskell.haskell"
      ]
    }
  },
  "remoteUser": "haskell"
}
